<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BlazorApp"
             x:Class="BlazorApp.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="PageBackgroundColor">White</Color>
            <Color x:Key="AccentBackgroundColor">#D3D800</Color>
            <Color x:Key="PrimaryTextColor">#3AAA35</Color>
            <Color x:Key="AccentTextColor">Black</Color>


            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="FontFamily" Value="Nunito" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="{DynamicResource AccentBackgroundColor}" />
                <Setter Property="FontFamily" Value="Nunito" />
                <Setter Property="BackgroundColor" Value="{DynamicResource AccentTextColor}" />
                <Setter Property="Padding" Value="20,15" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>