@inherits LayoutComponentBase
@inject NavigationManager Navigation


@namespace BlazorSite
    
 <div class="page">
    <div class="topbar">
        <div class="main-menu">
            <NavMenu  @bind-Expanded="@expandedMenu">
                <NavMenuLink Text="PromiPay" Href="/dash" />
                <NavMenuLink Text="PromiMart" Href="/mart"/>
                <NavMenuLink Text="Settings"  Href="/dash"/>
                <NavMenuLink Text="Help" Href="/dash" />
                <NavMenuLink Text="Our Team" Href="/mart" />
                <NavMenuLink Text="Our Misson" Href="/dash" />
                <NavMenuLink Text="Join Us!" Href="/dash" />
            </NavMenu>
        </div>
        <div class="brand">
            <img @onclick="OnBrandClick" title="YouCent Logo" class="brand-logo" src="/img/logo-white-small.png" />
            <span @onclick="OnBrandClick" class="brand-name" href="/dash">YouCent</span>
        </div>
    </div>

    <main>
        <article class="content">
            <ErrorBoundary>
                @Body
            </ErrorBoundary>
        </article>
    </main>
</div>


    
@code
{

    bool expandedMenu = false;
    void OnBrandClick(MouseEventArgs e)
    {
        Navigation.NavigateTo("/dash");
    }
}
